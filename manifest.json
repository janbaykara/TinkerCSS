{
    "name": "TinkerCSS",
    "description": "An inspector tools panel. Tinker with a site's CSS in real time, automatically remember your changes.",
    "manifest_version": 2,
    "version": "1.2.0",

    "icons": {
        "128": "img/icon128.png"
    },

    "permissions": [
        "storage",
        "tabs",
        "<all_urls>"
    ],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "deps/jquery.js",
            "lib/content.js"
        ]
    }],

    "background": {
        "scripts": [
            "lib/background.js"
        ]
    },

    "devtools_page": "lib/devtools/devtools.html"
}
